<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <% if name == 'alert' %>
      <div class="alert alert-danger">
        <a class="close" data-dismiss="alert">&#215;</a>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      </div>
    <% else %>
      <div class="alert alert-success">
        <a class="close" data-dismiss="alert">&#215;</a>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      </div>
    <% end %>  
  <% end %>
<% end %>
