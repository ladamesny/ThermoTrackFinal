<div class="navbar-header">
    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
      <span class="sr-only"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <strong><%= link_to "Thermotrack!", root_path, class: 'navbar-brand', title: "Click to go to home page", style: "font-size: 40px;" %></strong>
    </div>

      <%if user_signed_in? %>
       <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav" style="margin-left: 15%;" >
            <li>
              <%= link_to 'Delete all Readings', removelist_readings_path(@readings.first), class: 'btn btn-small navbar-btn', data: {confirm: 'Are you sure you want to delete all readings?'}, method: 'post', style: "font-weight: bold; color:red;" %>
              </li>
            </ul>  
      <ul class="nav navbar-nav" style="float: right;">

        <li class="dropdown pull-right">
            <%= link_to '#', class: 'btn btn-small navbar-btn dropdown-toggle', 'data-toggle' => 'dropdown' do %>
              <%= image_tag(current_user.image ? current_user.image : current_user.gravatar_url, height: '50', width: '50') %> <%= current_user.name  %>
              <span class="caret"></span>
            <% end %>
            <ul class="dropdown-menu" role="menu">
              <li>
                <%= link_to edit_user_registration_path(current_user) do %>
                  <i class="icon-pencil"></i>
                  <strong>Edit Profile</strong>
                <% end %>
              </li>
              <li>
                <%= link_to(destroy_user_session_path, method: 'delete') do %>
                  <i class="icon-circle-arrow-left"></i>
                  <strong>Logout</strong>
                <% end %>
              </li>
            </ul>
        </li>
              <%end%>
        </ul>  
    </div>
      
